<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ocr_testing.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:background="@drawable/box_borders"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pictureImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/camera2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/box_borders"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/micrCodeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@android:color/background_light"/>

            <TextView
                android:id="@+id/emptyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="MICR AREA"/>

        </LinearLayout>

        <EditText
            android:id="@+id/extractedNumber"
            style="@style/default_edit_text"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:hint="Extracted number"
            android:singleLine="true"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/routingNumber"
            style="@style/default_edit_text"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:hint="Routing Number"
            android:singleLine="true"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/accountNumber"
            style="@style/default_edit_text"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:hint="Account Number"
            android:singleLine="true"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/transitBranch"
            style="@style/default_edit_text"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:hint="Transit Branch Number"
            android:singleLine="true"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/financialInstitution"
            style="@style/default_edit_text"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:hint="Financial Institution Number"
            android:singleLine="true"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/fullImageViewButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="View full picture"/>

    </LinearLayout>

</LinearLayout>
